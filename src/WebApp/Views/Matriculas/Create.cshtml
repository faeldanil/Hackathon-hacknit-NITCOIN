@model ScoreClass.Web.Models.Cadastros.Matricula

@{
    ViewData["Title"] = "Cadastro Matrícula";
}

<h2>Cadastrar Matrícula</h2>

<h4>Matricula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
